# Existing configurations for left and right shields
if SHIELD_SOFLE_ERGOMECH_LEFT
config ZMK_KEYBOARD_NAME
    default "Sofle Ergomech"

config ZMK_SPLIT_ROLE_CENTRAL
    default y

config ZMK_SPLIT
    default y
endif

if SHIELD_SOFLE_ERGOMECH_RIGHT
config ZMK_KEYBOARD_NAME
    default "Sofle Ergomech"

config ZMK_SPLIT_ROLE_CENTRAL
    default n

config ZMK_SPLIT
    default y
endif

# New dongle configuration
if SHIELD_SOFLE_ERGOMECH_DONGLE
config ZMK_KEYBOARD_NAME
    default "Sofle Ergomech"

config ZMK_SPLIT_ROLE_CENTRAL
    default y

config ZMK_SPLIT
    default y

# Set this to the number of peripherals your dongle will have (left + right = 2)
config ZMK_SPLIT_BLE_CENTRAL_PERIPHERALS
    default 2

# Set this to ZMK_SPLIT_BLE_CENTRAL_PERIPHERALS + your desired number of BT profiles (default is 5)
config BT_MAX_CONN
    default 7

# Set this to the same number as BT_MAX_CONN
config BT_MAX_PAIRED
    default 7
endif